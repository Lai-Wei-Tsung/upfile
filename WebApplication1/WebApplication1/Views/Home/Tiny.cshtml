
@{
    ViewBag.Title = "TinyMCE";
}

<h3>@ViewBag.Title</h3>
<p>@ViewBag.Message</p>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tiny</title>
    <script src="https://cdn.tiny.cloud/1/460mvsstpo6mmssgl4rjai31i7tbozy4gq3mibj41flq6vdz/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

</head>
<body>
    <h1>TinyMCE Quick Start Guide</h1>
    @{
        using (Html.BeginForm("Tiny", "Home"))
        {
            <textarea id="mytextarea">Hello, World!</textarea><br />
            <input type="submit" value="提交" name="setback" />
        }
    }
    @*<form method="post">
        <textarea id="mytextarea">Hello, World!</textarea><br />
        <input type="submit" value="提交" name="setback" />
    </form>*@
    <script>
        tinymce.init({
            selector: '#mytextarea',
            plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
        });
    </script>
</body>
</html>
