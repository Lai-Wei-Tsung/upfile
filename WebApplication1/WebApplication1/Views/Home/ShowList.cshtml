@model IEnumerable<WebApplication1.Models.t1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("ShowList","Home",FormMethod.Post))
    {
        <p>
            Title: @Html.TextBox("search")
            <input type="submit" value="搜尋" />
        </p>
    }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imag)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imag)
                <img src="@Html.DisplayFor(modelItem => item.Imag )" style=" width:50px; height:50px ">
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
